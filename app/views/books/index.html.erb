<!DOCTYPE html>
<html>
<head></head>
<body>
<% if flash[:notice] %>
<p class="green"><%= flash[:notice] %></p>
<% end %>
<h1>Books</h1>

<table>
	<thead>
		<tr>
			<th>Title</th>
			<th>Body</th>
			<th colspan="3"></th>
		</tr>
	</thead>
	<tbody>
		<% @itiran.each do |book| %>
			<tr>
				<td><%= book.title %></td>
				<td><%= book.body %></td>
				<td><%= link_to "Show", book_path(book.id) %></td>
				<td><%= link_to "Edit", edit_book_path(book.id) %></td>
				<td><%= link_to "Destroy", book_path(book.id),method: :delete, "data-confirm" => "Are You Sureï¼Ÿ" %>
				</td>
			</tr>
		<% end %>
	</tbody>
</table>



<%= form_for(@book, url: '/books') do |f| %>

	<h2>New book</h2>
	<div class="field">
		<label>Title</label><br>
			<%= f.text_field :title %><br>
		<label>Body</label><br>
			<%= f.text_area :body %><br>

			<%= f.submit'Create Book' %>

<% end %>
</div>
</body>
</html>